---
const { skills = [
    { title: "Unreal Engine", percent: 90 },
    { title: "Javascript", percent: 75 },
    { title: "Node.js", percent: 60 },
    { title: "Laravel", percent: 60 },
    { title: "Python", percent: 45 }
  ] } = Astro.props;
---

<section class="skill">
  <h3 class="h3 skills-title">My skills</h3>
  <ul class="skills-list content-card">
    {skills.map(skill => (
      <li class="skills-item">
        <div class="title-wrapper">
          <h5 class="h5">{skill.title}</h5>
          <data value={skill.percent}>{skill.percent}%</data>
        </div>
        <div class="skill-progress-bg">
          <div class="skill-progress-fill" style={`width: ${skill.percent}%;`}></div>
        </div>
      </li>
    ))}
  </ul>
</section>
