---
// Navbar.astro
const {
  links = [
    { name: "Acerca de m√≠", page: "about" },
    { name: "Proyectos", page: "portfolio" },
    { name: "Contacto", page: "contact" }
  ],
  activePage = "about"
} = Astro.props;
---

<nav class="navbar">
  <ul class="navbar-list">
    {links.map((link) => (
      <li class="navbar-item">
        <button
          class={`navbar-link ${link.page === activePage ? "active" : ""}`}
          data-nav-link
        >
          {link.name}
        </button>
      </li>
    ))}
  </ul>
</nav>
